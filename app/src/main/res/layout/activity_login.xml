<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo_login"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:text="FaÃ§a seu login"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:hint="Email">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/borda_cinza"
                android:fontFamily="@font/roboto"
                android:inputType="textPersonName"
                android:padding="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:hint="Senha">

            <EditText
                android:id="@+id/et_senha"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/borda_cinza"
                android:fontFamily="@font/roboto"
                android:inputType="textPersonName"
                android:padding="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <CheckBox
                android:id="@+id/checkbox_lembrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="-10dp"
                android:layout_toLefttOf="@+id/tv_esqueceu_senha"
                android:buttonTint="@color/white"
                android:enabled="false"
                android:scaleX="0.90"
                android:scaleY="0.85"
                android:text="lembrar-me"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_esqueceu_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkbox_lembrar"
                android:layout_marginTop="-29dp"
                android:layout_marginRight="60dp"
                android:layout_toRightOf="@+id/checkbox_lembrar"
                android:text="esqueceu a senha?"
                android:textSize="17dp"
                android:layout_marginStart="35dp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginLeft="35dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/botao_entrar"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/borda_marrom"
            android:fontFamily="@font/roboto"
            android:inputType="textPersonName"
            android:text="Entrar"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ou"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/botao_google"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/google"
            android:text="Continuar com Google"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/borda_branca"
            android:padding="10dp"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
